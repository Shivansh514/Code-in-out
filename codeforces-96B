#include <bits/stdc++.h>
using namespace std;
typedef long long int lli;
#define md 1000000007
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    lli n,x,z,l,l1,l2=0;
    cin>>n;
    string s1=to_string(n);
    l1=s1.length();
    string s="";
    while(l2<l1)
    {
        s=s+"47";
        l2+=2;
    }
   
    sort(s.begin(),s.end());
    while(1)
    {
        x=stoll(s);
        if(x>=n)
        break;
        
        if(next_permutation(s.begin(),s.end()))
        continue;
        else
        {s=s+"47";
sort(s.begin(),s.end());
    }}
    cout<<x<<"\n";
    return 0;
}
