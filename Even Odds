#include <bits/stdc++.h>
using namespace std;
typedef long long int lli;
#define md 1000000007
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    lli k,n,x;
    cin>>n>>k;
    if(n%2!=0)
    {
        x=n/2+1;
    }
    else
    x=n/2;
    if(k<=x)
    {
        cout<<1+(k-1)*2;
    }
    else
    {
        cout<<2+(k-x-1)*2;
    }
    return 0;
}
